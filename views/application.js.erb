var scheme   = "<%= @scheme %>";
var uri      = scheme + window.document.location.host + "/";
var ws       = new WebSocket(uri);
// var uri = "ws://"+window.document.location.host+"/"
// var ws = new Faye.Client(uri);
// alert("uri:"+uri);
// alert("ws:"+ws);

ws.onmessage = function(message) {
  var data = JSON.parse(message.data);
  $("#messages-2k13").append("<div class='panel panel-default'><div class='panel-heading'>" + data.handle + "</div><div class='panel-body'>" + data.text + "</div></div>");
  $("#messages-2k13").stop().animate({
    scrollTop: $('#messages-2k13')[0].scrollHeight
  }, 800);
};



$("#input-form").on("submit", function(event) {
  event.preventDefault();
  var handle = $("#input-handle")[0].value;
  var text   = $("#input-text")[0].value;
  ws.send(JSON.stringify({ handle: handle, text: text }));
  $("#input-text")[0].value = "";
});
